{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('../css/teamAdmin.css') }}">
{% endblock %}

{% block body %}
    <div class="bodyAdminTeam">
    <h1 class="titreTeamAdmin">Teams list</h1>

    <table>
        <thead>
            <tr class="headTeamAdmin">
                <th><div class="flagTitle"> Id</div></th>
                <th><div class="flagTitle">Nationality</div></th>
                <th><div class="flagTitle">Flagurl</div></th>
                <th><div class="flagTitle">Actions</div></th>
            </tr>
        </thead>
        <tbody><div class="divtbody">
        {% for team in teams %}
            <tr>

                <td><div class="flag"><a href="{{ path('team_show', { 'id': team.id }) }}">{{ team.id }}</a></div></td>
                <td><div class="flag">{{ team.nationality }}</div></td>
                <td><div class="flagTitle"><div class="flag"><img src="{{ team.flagUrl }}" style="max-width:200px", height="auto"></div></div></td>
                <td>
                    <div class="flag">
                        <ul>
                            <li>
                                <a href="{{ path('team_show', { 'id': team.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('team_edit', { 'id': team.id }) }}">edit</a>
                            </li>
                        </ul>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </div>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('team_new') }}">Create a new team</a>
        </li>
    </ul>
    </div>
{% endblock %}
