{% extends 'base.html.twig' %}

{% block body %}
    <h1>Teams list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nationality</th>
                <th>Flagurl</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for team in teams %}
            <tr>
                <td class="indexTeamAdminTd"><a href="{{ path('team_show', { 'id': team.id }) }}">{{ team.id }}</a></td>
                <td class="indexTeamAdminTd">{{ team.nationality }}</td>
                <td class="indexTeamAdminTd"><img src="{{ team.flagUrl }}" style="width:200px"></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('team_show', { 'id': team.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('team_edit', { 'id': team.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('team_new') }}">Create a new team</a>
        </li>
    </ul>
{% endblock %}
