{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('../css/teamAdmin.css') }}">
{% endblock %}

{% block body %}
<div class="bodyAdminTeam">

<h1 class="titreTeamAdmin">Playedmaps list</h1>

    <table>
        <thead>
            <tr>
                <th><div class="flagTitle">Id</div></th>
                <th><div class="flagTitle">Score1</div></th>
                <th><div class="flagTitle">Score2</div></th>
                <th><div class="flagTitle">Actions</div></th>
            </tr>
        </thead>
        <tbody>
        {% for playedMap in playedMaps %}
            <tr>
                <td><div class="flag"><a href="{{ path('playedmap_show', { 'id': playedMap.id }) }}">{{ playedMap.id }}</a></div></td>
                <td><div class="flag">{{ playedMap.score1 }}</div></td>
                <td><div class="flag">{{ playedMap.score2 }}</div></td>
                <td><div class="flag">
                    <ul>
                        <li>
                            <a href="{{ path('playedmap_show', { 'id': playedMap.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('playedmap_edit', { 'id': playedMap.id }) }}">edit</a>
                        </li>
                    </ul>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('playedmap_new') }}">Create a new playedMap</a>
        </li>
    </ul>
</div>
{% endblock %}
