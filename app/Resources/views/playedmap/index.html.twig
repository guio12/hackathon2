{% extends 'admin.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('../css/teamAdmin.css') }}">
{% endblock %}

{% block body %}
<div class="bodyAdminTeam">

<h1 class="titreTeamAdmin">Playedmaps list</h1>

    <table>
        <thead>
            <tr>
                <th><div class="flagTitle">Id</div></th>
                <th><div class="flagTitle">Score1</div></th>
                <th><div class="flagTitle">Score2</div></th>
                <th><div class="flagTitle">Actions</div></th>
            </tr>
        </thead>
        <tbody>
        <form class="form-control" method="post" action="">
            <select name="match" class="custom-select"  onchange="this.form.submit()">
                <option value="" {% if select=="" %}selected{% endif %}></option>
                {% for match in matchs %}
                    <option value="{{ match.id }}" {% if select==match.id %}selected{% endif %}>{{ match }}</option>
                {% endfor %}
            </select>
        </form>
        {% if select!="" %}
            {% for playedMap in playedMaps %}
                <tr>
                    <td>{{ playedMap.map }}</td>
                    <td>{{ playedMap.score1 }}</td>
                    <td>{{ playedMap.score2 }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('playedmap_show', { 'id': playedMap.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('playedmap_edit', { 'id': playedMap.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        {% endif %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('playedmap_new') }}">Create a new playedMap</a>
        </li>
    </ul>
</div>
{% endblock %}
