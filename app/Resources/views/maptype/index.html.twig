{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('../css/teamAdmin.css') }}">
{% endblock %}

{% block body %}
<div class="bodyAdminTeam">
    <h1 class="titreTeamAdmin">Maptypes list</h1>

    <table>
        <thead>
            <tr>
                <th><div class="flagTitle">Id</div></th>
                <th><div class="flagTitle">Type</div></th>
                <th><div class="flagTitle">Actions</div></th>
            </tr>
        </thead>
        <tbody>
        {% for mapType in mapTypes %}
            <tr>
                <td><a href="{{ path('maptype_show', { 'id': mapType.id }) }}">{{ mapType.id }}</a></td>
                <td>{{ mapType.type }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('maptype_show', { 'id': mapType.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('maptype_edit', { 'id': mapType.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('maptype_new') }}">Create a new mapType</a>
        </li>
    </ul>
</div>
{% endblock %}
