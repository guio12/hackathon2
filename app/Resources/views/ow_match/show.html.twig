{% extends 'base.html.twig' %}

{% block body %}
    <h1>Ow_match</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ oW_Match.id }}</td>
            </tr>
            <tr>
                <th>Round</th>
                <td>{{ oW_Match.round }}</td>
            </tr>
            <tr>
                <th>Matchnum</th>
                <td>{{ oW_Match.matchNum }}</td>
            </tr>
            <tr>
                <th>Team1</th>
                <td>{{ oW_Match.team1 }}</td>
            </tr>
            <tr>
                <th>Team2</th>
                <td>{{ oW_Match.team2 }}</td>
            </tr>
            <tr>
                <th>Score1</th>
                <td>{{ oW_Match.score1 }}</td>
            </tr>
            <tr>
                <th>Score2</th>
                <td>{{ oW_Match.score2 }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('ow_match_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('ow_match_edit', { 'id': oW_Match.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
