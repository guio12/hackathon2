{% extends 'admin.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('../css/teamAdmin.css') }}">
{% endblock %}


{% block body %}
<div class="bodyAdminTeam">
    <h1 class="titreTeamAdmin">Ow_match</h1>

    <table>
        <tbody>
            <tr>
                <th><div class="flagTitle">Id</div></th>
                <td>{{ oW_Match.id }}</td>
            </tr>
            <tr>
                <th><div class="flagTitle">Round</div></th>
                <td>{{ oW_Match.round }}</td>
            </tr>
            <tr>
                <th><div class="flagTitle">Matchnum</div></th>
                <td>{{ oW_Match.matchNum }}</td>
            </tr>
            <tr>
                <th><div class="flagTitle">Score1</div></th>
                <td>{{ oW_Match.score1 }}</td>
            </tr>
            <tr>
                <th><div class="flagTitle">Score2</div></th>
                <td>{{ oW_Match.score2 }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('ow_match_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('ow_match_edit', { 'id': oW_Match.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
</div>
{% endblock %}
