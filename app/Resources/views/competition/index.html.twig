{% extends 'base.html.twig' %}

{% block body %}
    <div class="content">
        <h2>COMPETITION</h2>

        <!--    Tree tournament    -->
        <div class="row BracketSystem">

            <!--    --------------------------------------------8eme FINALE--------------------------------------------------    -->
            <div class="container-fluid col-md-3">
                <div class="Bracket-column Bracket-round-1">
                    <H3>1/8 FINALE</H3>
                    {% for i in 0..3 %}
                        <!--    group    -->
                        <div class="Bracket-group">
                            {% for j in 0..1 %}
                                {% set k=i+i+j %}
                                <!--    match    -->
                                <div class="Bracket-match">
                                    <div class="Bracket-summary">
                                        <div class="BracketMatch-unit">
                                            <!--    equipe infos    -->
                                            <div class="BracketUnit">
                                                <div class="BracketUnit-flag">{% if matchs[k].team1!="" %}<img src="{{ matchs[k].team1.flagUrl }}"> </img>{% endif %}</div>
                                                <div class="BracketUnit-clickable">
                                                    <div class="BracketUnit-country">{% if matchs[k].team1!="" %}{{ matchs[k].team1.nationality }}{% endif %}</div>
                                                </div>
                                                <div class="BracketUnit-score">
                                                    <span>{{ matchs[k].score1 }}</span>
                                                </div>
                                            </div>
                                            <!--    equipe infos    -->
                                            <div class="BracketUnit">
                                                <div class="BracketUnit-flag"><img src="{% if matchs[k].team2!="" %}{{ matchs[k].team2.flagUrl }}{% endif %}"></img></div>
                                                <div class="BracketUnit-clickable">
                                                    <div class="BracketUnit-country">{% if matchs[k].team2!="" %}{{ matchs[k].team2.nationality }}{% endif %}</div>
                                                </div>
                                                <div class="BracketUnit-score">
                                                    <span>{{ matchs[k].score2 }}</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="BracketMatch-play">
                                            <div class="BracketMatch-playIcon glyphicon glyphicon-facetime-video"></div>
                                        </div>
                                    </div>
                                    <div class="Bracket-details">
                                        <div class="BracketMatch-detailsTrigger">Match Details</div>
                                        <div class="BracketMatchReport">
                                            <div class="BracketMatchReport-list">
                                                <div class="BracketMatchResult">
                                                    <div class="BracketMatchResult-score">0</div>
                                                    <div class="BracketMatchResult-map">Nom de Map</div>
                                                    <div class="BracketMatchResult-score">0</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            {% endfor %}
